// See: http://fontello.com/
.icon
    &:before
        font-family: "Icons"
        font-style: normal
        font-weight: normal
        speak: none

        display: inline-block
        text-decoration: inherit
        text-align: center

        /* For safety - reset parent styles, that can break glyph codes */
        font-variant: normal
        text-transform: none
         
        /* fix buttons height, for twitter bootstrap */
        line-height: 1em
    
    &.heart
        &:before
            content: '\e801'

    &.rss-squared
        &:before
            content: '\e800'

    &.right-small
        &:before
            content: '\e803'

    &.clock-1
        &:before
            content: '\e805'

    &.location-outline
        &:before
            content: '\e802'

    &.down-small
        &:before
            content: '\e808'

    &.tag-empty
        &:before
            content: '\e804'

    &.emo-unhappy
        &:before
            content: '\e806'

    &.shuffle
        &:before
            content: '\e807'