@import 'nib'

// See: http://fontello.com/
.icon
    &:before
        font-family: "Icons"
        font-style: normal
        font-weight: normal
        speak: none

        display: inline-block
        text-decoration: inherit
        width: 1em
        text-align: center

        /* For safety - reset parent styles, that can break glyph codes */
        font-variant: normal
        text-transform: none
         
        /* fix buttons height, for twitter bootstrap */
        line-height: 1em

    &.globe
        &:before
            content: '\e803'
    
    &.location
        &:before
            content: '\e800'

    &.clock
        &:before
            content: '\e802'

    &.search
        &:before
            content: '\e804'

    &.pinboard
        &:before
            content: '\e801'